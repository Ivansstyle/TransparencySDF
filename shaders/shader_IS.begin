}


mat2x3 opUnion(mat2x3 a, mat2x3 b) // MIXING
{
  mat2x3 res; 
  res = a[0].x <= b[0].x ? a : b;

  return res; 
}

mat2x3 opIntersection(mat2x3 a, mat2x3 b) // MIXING
{
  return a[0].x >= b[0].x ? a : b;
}

mat2x3 opSubtraction(mat2x3 a, mat2x3 b)
{
  if (-a[0].x >= b[0].x) {
      return mat2x3(-a[0].x, a[0].y, a[0].z, a[1].x, a[1].y, a[1].z);
  }
  else return b;
}

