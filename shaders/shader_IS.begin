// Box unsigned exact
mat2x3 udBox(vec3 p, vec3 b, vec4 color)
{
    mat2x3 res;
    res[1] = color.xyz;
    res[0].y = color.w;
    res[0].x = length(max(abs(p)-b,0.0));
    return res;
}

// Round Box unsigned exact

mat2x3 udRoundBox(vec3 p, vec3 b, float r, vec4 color)
{
    mat2x3 res;
    res[1] = color.xyz;
    res[0].y = color.w;
    res[0].x = length(max(abs(p)-b,0.0))-r;
    return res;
}


